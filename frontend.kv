<BasicGrid@GridLayout>
    cols: 1
    padding: 10
    spacing: 10


<StyledBtn@Button>
    background_normal: 'images/normal.png'
    background_down: 'images/down.png'

<CameraScreen>:
    BasicGrid:
        Camera:
            index: -1
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0
        StyledBtn:
            id: camera_btn
            text: 'Start Camera'
            size_hint_y: 0.1
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        StyledBtn:
            text: 'Capture'
            size_hint_y: 0.1
            on_press: root.capture()

<ImageScreen>
    BasicGrid:
        Image:
            id: img
            size_hint_y: 0.7
        StyledBtn:
            text: 'Create shareable link'
            size_hint_y: 0.1
            on_press: root.create_link()
        Label:
            text: ''
            id: link
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            StyledBtn:
                text: 'Copy Link'
                on_press: root.copy_link()
            StyledBtn:
                text: 'Open Link'
                on_press: root.open_link()

<RootWidget>
    canvas.before:
        Color:
            rgba: (0.6, 0.5, 0.7, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'